/*Diagram stuff  */
path.arc {
  cursor: move;
  fill: #fff;
}

.radio {
     float: right;
}

.node {
  font-size: 10px;  
}

.node.jar {
  font-size: 20px;  
}
.node.package {
  font-size: 15px;  
}

.hiddenicon {
/*    display:none*/
}

.node:hover {
  fill: #1f77b4;
  font-size: 20px;  
}

.edge {
  fill: none;
  stroke: #1f77b4;
  stroke-opacity: 0.4;
  stroke-width: 2px;
}

.edge.selected {
     stroke-width: 4px;
}

.edge.source, .edge.target {
  stroke-opacity: 1;
  stroke-width: 3px;
}

.node.selected {
     fill:purple !important;
}
.node.target {
  fill: #d62728 !important;
}

.edge.source {
  stroke: #d62728;
}

.node.source {
  fill: #2ca02c;
}

.edge.target {
  stroke: #2ca02c;
}
